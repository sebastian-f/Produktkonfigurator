@model IList<ProductConfigurator.WebUI.Models.HandleOrderViewModel>

@{
	Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.ActionLink("Admin", "Index")
<br /><br />


    <table>
        <tr>
            <th>
                OrderID
            </th>
            <th>
                Total Price
            </th>
            <th>
                Leveransdatum
            </th>
            <th>
                Send
            </th>
        </tr>

@foreach (ProductConfigurator.WebUI.Models.HandleOrderViewModel order in Model)
{
    <text>
    <tr>
        <td>@order.Id</td>
        <td>@order.Price </td>
        <td>@order.DeliveryDate.ToString("yyyy-mm-dd")</td>
        <td>
            @if (order.Sent != null)
            {
                if(order.Sent==false)
                {
                    using (Html.BeginForm("SendOrder", "Admin", new { id = order.Id }))
                    {
                        @Html.AntiForgeryToken()
                        <button type="submit">
                            Send order
                        </button>
                    }
                }else{
                    <text>
                        Order skickad!
                    </text>
                }
            }else{
                    <text>
                        Order skickad!
                    </text>   
            }
        </td>
    </tr>


    </text>
}

</table>